{
  "tabWidth": 2,
  "printWidth": 100,
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "bracketSpacing": true,
  "endOfLine": "lf",
  "arrowParens": "avoid",
  "jsxBracketSameLine": false,
  "overrides": [
    {
      "files": [
        "*.tsx",
        "*.ts"
      ],
      "options": {
        "parser": "babel-ts"
      }
    }
  ]
}